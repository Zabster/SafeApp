<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardStyle">
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="CardStyle.BaseStyle">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="contentPadding">@dimen/padding_small_size</item>
        <item name="backgroundColor">?attr/backgroundColor</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">?textColorPrimary</item>
    </style>

    <style name="TextStyle.BaseText">
        <item name="android:fontFamily">@font/halant</item>
        <item name="android:textSize">@dimen/text_base_size</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TextStyle.BaseText.Desc">
        <item name="android:fontFamily">@font/halant</item>
        <item name="android:textSize">@dimen/text_min_size</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <style name="TextStyle.BaseText.Title">
        <item name="android:fontFamily">@font/halant_medium</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TextStyle.TitleText">
        <item name="android:fontFamily">@font/black_ops_one</item>
        <item name="android:padding">@dimen/padding_small_size</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TextStyle.BigText">
        <item name="android:fontFamily">@font/black_ops_one</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_super_big_size</item>
        <item name="android:typeface">normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyle.EditText">
        <item name="android:fontFamily">@font/halant_medium</item>
        <item name="android:textSize">@dimen/edit_text_base_size</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TextStyle.EditText.PasswordType">
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="Background" />

    <style name="Background.BaseBackground">
        <item name="android:background">?colorSurface</item>
    </style>

    <style name="ButtonStyle" />

    <style name="ButtonStyle.BaseButton">
        <item name="android:fontFamily">@font/halant_medium</item>
        <item name="cornerRadius">@dimen/button_corner_small_radius</item>
    </style>

    <style name="ButtonStyle.IconOnly">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>